---
import '@fontsource-variable/inter';
import SEO from '../components/SEO.astro';
import SkipLink from '../components/SkipLink.astro';
import '../styles/global.css';
import '../styles/theme-toggles.min.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="This is Benjami Bono's portfolio where I broadcast all my projects, experience, some info about me and social media links."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO title={title} />
    <script is:inline>
      // Check for saved theme preference, otherwise use system preference
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      // Apply theme immediately to prevent flash
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }

      // Save the theme preference
      localStorage.setItem('theme', theme);
    </script>
  </head>
  <body class="min-h-screen max-w-screen-lg mx-auto px-4 py-8">
    <SkipLink href="#main-content" />
    <slot />

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Función para animar el cambio de tema usando View Transitions API
        async function animateThemeChange(to: 'dark' | 'light') {
          if (!document.startViewTransition) {
            // Fallback para navegadores que no soportan View Transitions
            if (to === 'dark') {
              document.documentElement.classList.add('dark');
            } else {
              document.documentElement.classList.remove('dark');
            }
            return;
          }

          // Usar View Transitions API
          const transition = document.startViewTransition(() => {
            if (to === 'dark') {
              document.documentElement.classList.add('dark');
            } else {
              document.documentElement.classList.remove('dark');
            }
          });

          try {
            await transition.finished;
          } catch (error) {
            console.error('Error during theme transition:', error);
          }
        }

        // Exponer la función globalmente para que el botón de cambio pueda usarla
        window.animateThemeChange = animateThemeChange;
      });
    </script>
  </body>
</html>
