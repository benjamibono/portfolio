---
import '@fontsource-variable/inter/400.css';
import '@fontsource-variable/inter/500.css';
import '@fontsource-variable/inter/600.css';
import '@fontsource-variable/inter/700.css';
import SEO from '../components/SEO.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} />
  </head>
  <body class="min-h-screen max-w-screen-lg mx-auto px-4 py-8 bg-[#fafafa] dark:bg-[#0a0a0a]">
    <slot />
  </body><style>
    body {
      font-family: 'Inter Variable', sans-serif, system-ui;
    }
  </style>
</html>
