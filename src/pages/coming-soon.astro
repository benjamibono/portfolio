---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Coming Soon - Benjami Bono">
  <div class="fixed inset-0 flex items-center justify-center">
    <div
      class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white bg-opacity-80 p-8 sm:p-16 md:p-24 lg:p-32 xl:p-44 rounded-lg shadow-lg text-center z-10"
    >
      <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold whitespace-nowrap">
        Coming Soon!
      </h1>
      <a
        href="/"
        aria-label="Back to homepage"
        class="mt-8 sm:mt-12 md:mt-16 inline-block px-4 sm:px-6 py-2 sm:py-3 bg-black text-white font-semibold rounded-lg shadow-md hover:bg-darkborder"
      >
        Back to Homepage
      </a>
    </div>
  </div>
</Layout>
