---
import Layout from '../layouts/Layout.astro';
import About from '../components/About.astro';
import Projects from '../components/Projects.astro';
import SideCard from '../components/SideCard.astro';
import Skills from '../components/Skills.astro';
import Experience from '../components/Experience.astro';
import SoftSkills from '../components/SoftSkills.astro';
import Education from '../components/Education.astro';
---

<Layout>
  <main id="main-content">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="md:col-span-1">
      <div class="fade-in" style="animation-delay: 100ms;">
        <SideCard />
      </div>
      <div class="fade-in" style="animation-delay: 200ms;">
        <Skills />
      </div>
      <div class="fade-in" style="animation-delay: 300ms;">
        <SoftSkills />
      </div>
    </div>
    <div class="md:col-span-2">
      <div class="space-y-6">
        <div class="fade-in" style="animation-delay: 100ms;">
          <About />
        </div>
        <div class="fade-in" style="animation-delay: 200ms;">
          <Projects />
        </div>
        <div class="fade-in" style="animation-delay: 300ms;">
          <Experience />
        </div>
        <div class="fade-in" style="animation-delay: 400ms;">
          <Education />
        </div>
      </div>
    </div>
  </div>
  </main>
</Layout>
